
<div class="container">
  <div class="row">
    <div class="col-9">
      <h4><%="My workorders"%></h4>
    </div>

    <div class="col-3 align-text-bottom align-middle out">
      <%= link_to destroy_user_session_path, class:"out ", method: :delete do %>
      <%= t(".sign_out", default: "Log out") %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-9">
         <ul class="dropdown-menu dropdown-menu-right" role="menu">
            <li class="dropdown-item text-center">
              <div class="card">
                <div class="card-body">

                   <span style="font-size: 48px;">
                    <i class="fa fa-user avatar img-rounded"></i>
                    </span>

                  <p class="m0 p0 d-block"> <%=current_user.email %></p>
                  <p class="small m0 p0">Premium Account</p>
                </div>

                <div class="card-footer d-flex justify-content-between">
                  <div>
                    <a href="003_app_pages@fa-laptop%2F006_user_profile" class="btn ">Edit Profile</a>
                  </div>
                  <div>
                    <a href="/users/sign_out" class="btn ">Log Out</a>
                  </div>
                </div>
              </div>
            </li>
        </ul>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-md-9">

        <table class="table table-striped table-hover table-sm-responsive">
          <thead>
            <th colspan="2" class="text-center">
              <div class="container">
                <div class="row">
                  <div class="col">

                    <!-- <i class="ti-angle-left "> <%= link_to interventions_path, date: @date_int - 1 %> </i> -->
                    <%= link_to interventions_path(date: @date_int - 1) do %>
                      <i class="ti-angle-left "></i>
                    <% end %>

                  </div>
                  <div class="col-6">
                    <%= @date %>
                  </div>
                  <div class="col">
                    <%= link_to interventions_path(date: @date_int + 1) do %>
                  <i class="ti ti-angle-right "></i>
                  <% end %>
                  </div>
                </div>
              </div>
            </th>

          </thead>
          <tbody class="workorders-table">
            <% @workorders.each do |workorder| %>

            <tr>

              <td><%= link_to intervention_path(workorder) do %>
                <strong>At: <%= workorder.date_planned.strftime('%I:%M') %></strong>
                <br> <%= workorder.address %> <% end %></td>

                <td><%= link_to intervention_path(workorder) do %>
                  <% if workorder.status == "Open"%>
                  <span class="badge badge-danger btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>

                  <% if workorder.status == "Scheduled"%>
                  <span class="badge badge-warning btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>

                  <% if workorder.status == "In progress"%>
                  <span class="badge badge-primary btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>

                  <% if workorder.status == "Closed"%>
                  <span class="badge badge-success btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>
                </td>
                <% end %>

              </tr>

              <% end %>
              <% if @workorders.length == 0 %>
              <tr><td colspan=42 class='text-center'>No workorders.</td></tr>
              <% end %>
            </tbody>
          </table>

        </div>

      </div>
    </div>

