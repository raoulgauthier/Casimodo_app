<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h4><%="My workorders"%></h1>
      </div>
    </div>
  </div>

<% content_for :description do %>
<p>Edit this template in <code>app/views/Workorders/index.html.erb</code>.</p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-9">

        <table class="table table-striped table-hover table-sm-responsive">
          <thead>

              <th><%= Date.today %> </th>

          </thead>
          <tbody>
            <% @workorders.each do |workorder| %>

            <tr>

              <td><%= link_to intervention_path(workorder) do %><strong>At: <%= workorder.date_planned.strftime('%I:%M') %></strong> <br> <%= workorder.address %> <% end %></td>
              <td><%= link_to intervention_path(workorder) do %> <%= workorder.status %> <% end %></td>

            </tr>

            <% end %>
            <% if @workorders.length == 0 %>
            <tr><td colspan=42 class='text-center'>No workorders.</td></tr>
            <% end %>
          </tbody>
        </table>

    </div>

  </div>
</div>
