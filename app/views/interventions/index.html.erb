
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h4><%="My workorders"%></h1>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-9">

        <table class="table table-striped table-hover table-sm-responsive">
          <thead>
            <th colspan="2" class="text-center">
              <div class="container">
                <div class="row">
                  <div class="col">
                    <i class="ti-angle-left ">  </i>
                  </div>
                  <div class="col-6">
                    <%= Date.today %>
                  </div>
                  <div class="col">
                    <i class="ti ti-angle-right "></i>
                  </div>
                </div>
              </div>
            </th>

          </thead>
          <tbody class="workorders-table">
            <% @workorders.each do |workorder| %>

            <tr>

              <td><%= link_to intervention_path(workorder) do %>
                <strong>At: <%= workorder.date_planned.strftime('%I:%M') %></strong>
                <br> <%= workorder.address %> <% end %></td>

                <td><%= link_to intervention_path(workorder) do %>
                  <% if workorder.status == "Scheduled"%>
                  <span class="badge badge-warning btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>

                  <% if workorder.status == "In progress"%>
                  <span class="badge badge-primary btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>

                  <% if workorder.status == "Done"%>
                  <span class="badge badge-success btn-block text-white">
                    <%= workorder.status %> <% end %>
                  </span>
                </td>
                <% end %>

              </tr>

              <% end %>
              <% if @workorders.length == 0 %>
              <tr><td colspan=42 class='text-center'>No workorders.</td></tr>
              <% end %>
            </tbody>
          </table>

        </div>

      </div>
    </div>

