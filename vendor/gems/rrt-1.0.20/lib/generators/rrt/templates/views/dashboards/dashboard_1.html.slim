    .col-sm-12.col-md-9.animate-fade-in-1000
      .card.card-full-height
        .card-header.d-flex.align-items-center
          h6.mr-auto SALES VS REFUNDS LAST 7 DAYS
          .d-flex
            .dropdown
              button#salesAndRefundButton.nav-link.btn.btn-icon.btn-neutral aria-expanded="false" aria-haspopup="true" data-toggle="dropdown", type: "button" 
                = theme_icon_tag "more"
              .dropdown-menu.dropdown-menu-right aria-badgeledby="salesAndRefundButton" 
                a.dropdown-item href: "#"  Action
                a.dropdown-item href: "#"  Another action
                a.dropdown-item href: "#"  Something else here
        .card-body
          canvas.sales-vs-refunds
    .col-sm-12.col-md-3.animate-fade-in-1000
      .card.card-full-height.d-flex
        .card-body
          h6 SALES ACTIVITY
          .timeline style: "height: 450px" 
            ul.left-timeline
              - types = [ { klass: 'refund', css_class: 'badge badge-danger'},  { klass: 'purchase', css_class: 'badge badge-success'}, { klass: 'cancellation', css_class: 'badge badge-light'}]
              - (1..8).each do |index|
                li.timeline-item
                  - instance = types[Random.rand(types.length)]
                  time class: "#{instance[:css_class]}" 
                    strong
                      | $#{Random.rand(120)}
                  .activity-text
                    strong Internet Genie
                    small.text-muted
                      = instance[:klass].upcase
                      | \- #{time_ago_in_words( DateTime.now-(index.minutes) )}
    .row.is-flex
      .col-sm-12.col-md-5.animate-fade-in-1000
        .card.card-default
          .card-body
            h6 MASTER SERVER
            .flot-realtime style: "height: 315px; width: 100%; display: block;" 
          .card-footer
            .row
              .col-xs-12.col-sm-12.col-md-12.col-lg-12
                .server-status-details.clearfix
                  h5.text-center Memory Stats
                  .row.stat-list.text-center
                    dl.col-xs-6.col-sm-6.col-md-3
                      dt In use
                      dd 2.5 GB
                    dl.col-xs-6.col-sm-6.col-md-3
